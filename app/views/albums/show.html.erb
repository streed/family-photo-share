    background: rgba(255, 255, 255, 1);
    color: #000;
    text-decoration: none;
  }

  .btn-action i {
    color: inherit;
    font-size: inherit;
  }

  .btn-light.btn-action {
    background: rgba(255, 255, 255, 0.9);
    color: #333;
  }

  .btn-light.btn-action:hover {
    background: rgba(255, 255, 255, 1);
    color: #000;
  }

  .btn-warning.btn-action {
    background: rgba(255, 193, 7, 0.9);
    color: #000;
    border-color: rgba(255, 193, 7, 0.8);
  }

  .btn-warning.btn-action:hover {
    background: rgba(255, 193, 7, 1);
    color: #000;
  }

  .btn-danger.btn-action {
    background: rgba(220, 53, 69, 0.9);
    color: white;
    border-color: rgba(220, 53, 69, 0.8);
  }

  .btn-danger.btn-action:hover {
    background: rgba(220, 53, 69, 1);
    color: white;
  }

  /* Slideshow Modal */
  .slideshow-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .slideshow-modal.show {
    display: flex;
  }

  .slideshow-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .slideshow-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slideshow-content {
    position: relative;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;
  }

  .slideshow-image {
    width: 90vw;
    height: 85vh;
    object-fit: contain;
    border-radius: 0;
    box-shadow: none;
  }

  .slideshow-info {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 15px 25px;
    text-align: center;
    max-width: 80vw;
    color: white;
    margin: 0;
  }

  .slideshow-title {
    margin: 0 0 8px 0;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    font-family: 'Comic Neue', cursive;
  }

  .slideshow-description {
    margin: 0 0 8px 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
    font-size: 0.95rem;
  }

  .slideshow-meta {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.85rem;
  }

  .slideshow-close {
    position: fixed;
    top: 30px;
    right: 30px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    font-size: 1.4rem;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10001;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slideshow-close:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.6);
  }

  .slideshow-nav {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    width: 70px;
    height: 70px;
    border-radius: 50%;
    font-size: 1.6rem;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10001;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slideshow-nav:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%);
    border-color: rgba(255, 255, 255, 0.6);
  }

  .slideshow-prev {
    left: 30px;
  }

  .slideshow-next {
    right: 30px;
  }

  /* Add Photo Section */
  .add-photo-link {
    position: relative;
    display: block;
  }
  
  .add-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 123, 255, 0.8);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    border-radius: 0.375rem;
  }
  
  .add-photo-link:hover .add-overlay {
    opacity: 1;
  }
  
  .photo-thumbnail-add {
    filter: brightness(0.8);
    transition: filter 0.2s ease-in-out;
  }
  
  .add-photo-link:hover .photo-thumbnail-add {
    filter: brightness(1);
  }

  /* Add Photos Grid Layout */
  .add-photos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 12px;
    padding: 20px 0;
  }

  .add-photo-tile {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 12px;
    background: #f8f9fa;
    transition: all 0.3s ease;
    border: 2px solid #e9ecef;
  }

  .add-photo-tile:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    border-color: #6b5d4f;
  }

  .add-photo-link {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .add-photo-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .add-photo-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .add-photo-tile:hover .add-photo-thumbnail {
    transform: scale(1.05);
  }

  .add-photo-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
    padding: 10px;
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .add-photo-tile:hover .add-photo-overlay {
    opacity: 1;
  }

  .add-photo-icon {
    background: rgba(107, 93, 79, 0.9);
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .add-photo-tile:hover .add-photo-icon {
    background: #6b5d4f;
    transform: rotate(90deg);
  }

  .add-photo-title {
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.9;
    flex: 1;
    margin-right: 8px;
  }

  .add-photos-section {
    background: #f8f9fa;
    border-radius: 16px;
    padding: 2rem;
    border-left: 4px solid #6b5d4f;
  }

  .add-photos-section h4 {
    color: #6b5d4f;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .album-header-cover {
      height: 250px;
    }

    .album-header-title {
      font-size: 2rem;
    }

    .album-header-description {
      font-size: 1rem;
    }

    .album-header-overlay {
      padding: 30px 20px 20px;
    }

    .album-header-actions {
      top: 10px;
      right: 10px;
    }

    .photo-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 10px;
    }

    .slideshow-container {
      width: 95%;
      height: 95%;
    }

    .slideshow-nav {
      width: 50px;
      height: 50px;
      font-size: 1.2rem;
    }

    .slideshow-prev {
      left: 10px;
    }

    .slideshow-next {
      right: 10px;
    }

    .slideshow-close {
      top: 10px;
      right: 10px;
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }

    .slideshow-info {
      padding: 15px;
      margin-top: 15px;
    }

    .slideshow-title {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .album-header-cover {
      height: 200px;
      border-radius: 0;
    }

    .album-header-title {
      font-size: 1.5rem;
    }

    .album-header-description {
      font-size: 0.9rem;
    }

    .album-header-info {
      flex-wrap: wrap;
    }

    .album-header-info small {
