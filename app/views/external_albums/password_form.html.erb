<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-10">
      <div class="external-access-card">
        <div class="card-header text-center mb-2">
          <h3><i class="fas fa-lock"></i> Protected Album</h3>
        </div>
        <div class="card-body text-center">
          <div class="lock-icon mb-4">
            <i class="fas fa-lock" style="font-size: 3rem; color: #6b5d4f; opacity: 0.7;"></i>
          </div>
          
          <h4 class="album-title mb-3">Protected Album</h4>

          <div class="password-form-section">

            <%= form_with url: external_album_authenticate_path(@album.sharing_token), 
                          method: :post, 
                          local: true, 
                          class: "password-form",
                          data: { turbo: false } do |form| %>
              
              <div class="form-group mb-3">
                <%= form.password_field :password, 
                                        class: "form-control form-control-lg text-center",
                                        placeholder: "Enter password",
                                        autofocus: true,
                                        required: true %>
              </div>
              
              <div class="button-container">
                <%= form.submit "Access Album",
                                class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          </div>
          
          <div class="security-notice mt-4">
            <small class="text-muted">
              <i class="fas fa-info-circle"></i>
              Access will be granted after successful authentication.
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

