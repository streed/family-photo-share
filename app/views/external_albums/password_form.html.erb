<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card external-access-card">
        <div class="card-header text-center">
          <h3><i class="fas fa-lock"></i> Protected Album</h3>
        </div>
        <div class="card-body text-center">
          <div class="album-preview mb-4">
            <% if @album.cover_photo&.image&.attached? %>
              <%= image_tag @album.cover_photo.short_thumbnail_url, 
                            alt: @album.name, 
                            class: "album-preview-image" %>
            <% else %>
              <div class="album-preview-placeholder">
                <i class="fas fa-images"></i>
              </div>
            <% end %>
          </div>
          
          <h4 class="album-title mb-3"><%= @album.name %></h4>
          
          <% if @album.description.present? %>
            <p class="text-muted mb-4"><%= truncate(@album.description, length: 150) %></p>
          <% end %>
          
          <div class="album-stats mb-4">
            <span class="badge bg-primary">
              <i class="fas fa-images"></i> <%= pluralize(@album.photo_count, 'photo') %>
            </span>
            <span class="badge bg-secondary ms-2">
              <i class="fas fa-user"></i> by <%= @album.user.display_name_or_full_name %>
            </span>
          </div>
          
          <div class="password-form-section">
            <p class="text-muted mb-3">
              <i class="fas fa-shield-alt"></i>
              This album is password protected. Please enter the password to view the photos.
            </p>
            
            <%= form_with url: external_album_authenticate_path(@album.sharing_token), 
                          method: :post, 
                          local: true, 
                          class: "password-form" do |form| %>
              
              <div class="form-group mb-3">
                <%= form.password_field :password, 
                                        class: "form-control form-control-lg text-center",
                                        placeholder: "Enter album password",
                                        autofocus: true,
                                        required: true %>
              </div>
              
              <div class="d-grid">
                <%= form.submit "Access Album", 
                                class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          </div>
          
          <div class="security-notice mt-4">
            <small class="text-muted">
              <i class="fas fa-info-circle"></i>
              Access will be granted after successful authentication.
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .external-access-card {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border: none;
    border-radius: 16px;
    overflow: hidden;
    margin-top: 2rem;
  }
  
  .external-access-card .card-header {
    background: linear-gradient(135deg, #6b5d4f 0%, #8b7355 100%);
    color: white;
    border: none;
    padding: 1.5rem;
  }
  
  .external-access-card .card-body {
    padding: 2rem;
  }
  
  .album-preview-image {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  }
  
  .album-preview-placeholder {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: #6c757d;
    margin: 0 auto;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .album-title {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .album-stats .badge {
    font-size: 0.8rem;
    padding: 0.5rem 0.75rem;
  }
  
  .password-form-section {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 2rem;
    margin: 1.5rem 0;
  }
  
  .password-form .form-control {
    border: 2px solid #dee2e6;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .password-form .form-control:focus {
    border-color: #6b5d4f;
    box-shadow: 0 0 0 0.2rem rgba(107, 93, 79, 0.25);
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #6b5d4f 0%, #8b7355 100%);
    border: none;
    border-radius: 8px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(107, 93, 79, 0.3);
  }
  
  .security-notice {
    background: #e8f4f8;
    border-radius: 8px;
    padding: 1rem;
    border-left: 4px solid #17a2b8;
  }
  
  @media (max-width: 768px) {
    .external-access-card {
      margin: 1rem;
    }
    
    .external-access-card .card-body {
      padding: 1.5rem;
    }
    
    .password-form-section {
      padding: 1.5rem;
    }
  }
</style>