<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-10">
      <div class="external-access-card">
        <div class="card-header text-center mb-2">
          <h3><i class="fas fa-lock"></i> Protected Album</h3>
        </div>
        <div class="card-body text-center">
          <div class="lock-icon mb-4">
            <i class="fas fa-lock" style="font-size: 3rem; color: #6b5d4f; opacity: 0.7;"></i>
          </div>
          
          <h4 class="album-title mb-3">Protected Album</h4>

          <div class="password-form-section">

            <%= form_with url: external_album_authenticate_path(@album.sharing_token), 
                          method: :post, 
                          local: true, 
                          class: "password-form" do |form| %>
              
              <div class="form-group mb-3">
                <%= form.password_field :password, 
                                        class: "form-control form-control-lg text-center",
                                        placeholder: "Enter password",
                                        autofocus: true,
                                        required: true %>
              </div>
              
              <div class="button-container">
                <%= form.submit "Access Album",
                                class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          </div>
          
          <div class="security-notice mt-4">
            <small class="text-muted">
              <i class="fas fa-info-circle"></i>
              Access will be granted after successful authentication.
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .external-access-card {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border: none;
    border-radius: 16px;
    overflow: hidden;
    margin-top: 2rem;
  }
  
  .external-access-card .card-header {
    background: linear-gradient(135deg, #6b5d4f 0%, #8b7355 100%);
    color: white;
    border: none;
    padding: 1.5rem;
  }
  
  .external-access-card .card-body {
    padding: 2rem;
  }
  
  .album-title {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .password-form-section {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 2rem;
    margin: 1.5rem 0;
  }
  
  .password-form .form-control {
    border: 2px solid #dee2e6;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .password-form .form-control:focus {
    border-color: #6b5d4f;
    box-shadow: 0 0 0 0.2rem rgba(107, 93, 79, 0.25);
  }
  
  .button-container {
    display: flex;
    justify-content: center;
    padding: 0 10px;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #6b5d4f 0%, #8b7355 100%);
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 16px;
    color: white !important;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-width: 160px;
    text-align: center;
    line-height: 1.2;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(107, 93, 79, 0.3);
  }
  
  .security-notice {
    background: #e8f4f8;
    border-radius: 8px;
    padding: 1rem;
    border-left: 4px solid #17a2b8;
  }
  
  @media (max-width: 768px) {
    .external-access-card {
      margin: 1rem 0.5rem;
    }
    
    .external-access-card .card-body {
      padding: 1.5rem 1rem;
    }
    
    .password-form-section {
      padding: 1.5rem 1rem;
    }
    
    .btn-primary {
      padding: 12px 20px;
      font-size: 16px;
      min-width: 140px;
    }
    
    .button-container {
      padding: 0 5px;
    }
  }
</style>